<?xml version="1.0" ?>
<robot name="simple_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="black" >
    <visual>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 0</specular>
          <emissive>0 0 0 1</emissive>
        </material>
    </visual>
  </xacro:macro>

  <material name="black_ros">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="base_footprint" />

  <link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.0875" ixy="0.0" ixz="0.0" iyy="0.0875" iyz="0.0" izz="0.15625"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.25" />
      </geometry>
      <material name="black_ros" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <cylinder length="0.2" radius="0.3" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_left">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.0007" ixy="0.0" ixz="0.0" iyy="0.0007" iyz="0.0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.05" />
      </geometry>
      <material name="black_ros" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <cylinder length="0.03" radius="0.05" />
      </geometry>
    </collision>
  </link>

  <link name="wheel_right">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.0007" ixy="0.0" ixz="0.0" iyy="0.0007" iyz="0.0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.05" />
      </geometry>
      <material name="black_ros" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <cylinder length="0.03" radius="0.05" />
      </geometry>
    </collision>
  </link>

  <link name="caster_front">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000004" ixy="0.0" ixz="0.0" iyy="0.000004" iyz="0.0" izz="0.000004"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.01" />
      </geometry>
      <material name="black_ros" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <sphere radius="0.01" />
      </geometry>
    </collision>
  </link>

  <link name="caster_rear">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000004" ixy="0.0" ixz="0.0" iyy="0.000004" iyz="0.0" izz="0.000004"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.01" />
      </geometry>
      <material name="black_ros" />
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
          <sphere radius="0.01" />
      </geometry>
    </collision>
  </link>

  <gazebo reference="base_link">
    <xacro:black/>
  </gazebo>

  <gazebo reference="wheel_left">
    <xacro:black/>
  </gazebo>

  <gazebo reference="wheel_right">
    <xacro:black/>
  </gazebo>

  <gazebo reference="caster_front">
    <xacro:black/>
  </gazebo>

  <gazebo reference="caster_rear">
    <xacro:black/>
  </gazebo>


  <joint name="base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.05"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <joint name="caster_front_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.24 0 -0.11"/>
    <parent link="base_link"/>
    <child link="caster_front"/>
  </joint>

  <joint name="caster_rear_joint" type="fixed">
    <origin rpy="0 0 0" xyz="-0.24 0 -0.11"/>
    <parent link="base_link"/>
    <child link="caster_rear"/>
  </joint>

  <joint name="wheel_left_joint" type="continuous">
    <origin rpy="1.57 0 0" xyz="0 0.2655 -0.07"/>
    <parent link="base_link"/>
    <child link="wheel_left"/>
    <axis xyz="0 0 -1" />
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <origin rpy="-1.57 0 0" xyz="0 -0.2655 -0.07"/>
    <parent link="base_link"/>
    <child link="wheel_right"/>
    <axis xyz="0 0 1" />
  </joint>

  <gazebo>
    <plugin
        filename="libgz-sim-diff-drive-system.so"
        name="gz::sim::systems::DiffDrive">
        <left_joint>wheel_left_joint</left_joint>
        <right_joint>wheel_right_joint</right_joint>
        <wheel_separation>0.531</wheel_separation>
        <wheel_radius>0.05</wheel_radius> 
        <max_wheel_torque>2000</max_wheel_torque>
        <max_wheel_acceleration>100.0</max_wheel_acceleration>
        <frame_id>diff/odom</frame_id>
        <tf_topic>diff_tf_temp_off</tf_topic>
        <child_frame_id>base_footprint</child_frame_id>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin name="FakeLandmarks" filename="libfake_landmarks.so">
      <landmark_topic>landmarks</landmark_topic> 
      <ros_frame>base_footprint</ros_frame>
      <threshold>10</threshold>
      <landmark_identifier>pillar</landmark_identifier>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
      <topic>/gz/joint_states</topic>
    </plugin>
  </gazebo>


</robot>